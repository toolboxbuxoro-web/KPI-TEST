# Copy this file to ".env" (or ".env.local") and fill in values.
# Never commit real secrets.

# Core
DATABASE_URL="postgresql://USER:PASSWORD@HOST:5432/DBNAME"
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="CHANGE_ME_TO_A_LONG_RANDOM_SECRET"

# Kiosk JWT
# If not set, the app will fallback to NEXTAUTH_SECRET for signing/verifying kiosk tokens.
# Recommended to set explicitly (and keep the same value across all server instances).
KIOSK_JWT_SECRET="CHANGE_ME_TO_ANOTHER_LONG_RANDOM_SECRET"
# Optional (defaults to 12h if not set)
KIOSK_JWT_TTL_SECONDS="43200"

# Optional integrations
UPSTASH_REDIS_REST_URL=""
UPSTASH_REDIS_REST_TOKEN=""
UPLOADTHING_TOKEN=""




